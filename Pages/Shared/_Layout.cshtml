@* Layout Padrão para a Aplicação v3 *@
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GtopPdqNet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
@* O body continua sendo flex column para posicionar o footer *@
<body class="d-flex flex-column min-vh-100">

    @* Verifica o título e renderiza CONDICIONALMENTE o layout padrão *@
    @if (ViewData["Title"]?.ToString() != "Login")
    {
        @* Layout Padrão (Navbar + Footer) *@
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">GtopPdqNet</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            @* Outros links *@
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>

        @* Área principal com container (é aqui que o RenderBody acontecerá) *@
        <main role="main" class="container pb-3 flex-shrink-0">
            @RenderBody() @* O conteúdo da página (ex: Index.cshtml) vai AQUI dentro do main/container *@
        </main>

        <footer class="border-top footer text-muted mt-auto">
            <div class="container">
                © 2023 - GtopPdqNet - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>
    }
    else @* Caso seja a página de Login *@
    {
        @* Apenas renderiza o corpo da página de Login. O layout é definido no próprio Login.cshtml *@
        @RenderBody()
    }


    @* Scripts que carregam em TODAS as páginas *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Scripts específicos da página *@
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>